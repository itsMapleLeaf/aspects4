{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dev",
			"dependsOn": ["tsc: watch", "dev: app", "dev: convex"],
			"dependsOrder": "parallel",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "dev: app",
			"type": "shell",
			"command": "bun",
			"args": ["run", "dev:app"],
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "dev: convex",
			"type": "shell",
			"command": "bun",
			"args": ["run", "dev:convex"],
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "tsc: watch",
			"type": "shell",
			"command": "bun",
			"args": ["tsc", "--watch", "--noEmit"],
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true
		}
	]
}
