{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dev",
			"dependsOn": ["dev:typecheck", "dev:convex", "dev:app"],
			"dependsOrder": "parallel",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "dev:app",
			"type": "shell",
			"command": "bun",
			"args": ["run", "dev:app"],
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "dev:convex",
			"type": "shell",
			"command": "bun",
			"args": ["run", "dev:convex"],
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "dev:typecheck",
			"type": "shell",
			"command": "bun tsc -b --watch --noEmit",
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true
		}
	]
}
